@model NdhnBook

@{
    ViewData["Title"] = "Thêm mới sách";
}

<h2>Thêm mới sách</h2>

<form asp-action="NdhnCreate" method="post">
    <div class="form-group">
        <label asp-for="NdhnId"></label>
        <input asp-for="NdhnId" class="form-control" />
        <span asp-validation-for="NdhnId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NdhnTitle"></label>
        <input asp-for="NdhnTitle" class="form-control" />
        <span asp-validation-for="NdhnTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NdhnDescription"></label>
        <textarea asp-for="NdhnDescription" class="form-control" rows="4"></textarea>
        <span asp-validation-for="NdhnDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NdhnImage"></label>
        <input asp-for="NdhnImage" class="form-control" />
        <small class="form-text text-muted">Ví dụ: images/book-1.jpg</small>
        <span asp-validation-for="NdhnImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NdhnPrice"></label>
        <input asp-for="NdhnPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NdhnPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NdhnPage"></label>
        <input asp-for="NdhnPage" class="form-control" type="number" />
        <span asp-validation-for="NdhnPage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
